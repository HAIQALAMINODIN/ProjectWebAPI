@model IEnumerable<RestaurantManagement.Models.Customer>

<div class="container mt-5">
    <h2 class="text-center mb-4">Customer List</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Customer Name</th>
                            <th>Date</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.CustomerName</td>
                                <td>@customer.Date.ToShortDateString()</td>
                                <td>@customer.Email</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-end">
                <a asp-action="Create" class="btn btn-primary mt-3">Add New Customer</a>
            </div>
        </div>
    </div>
</div>