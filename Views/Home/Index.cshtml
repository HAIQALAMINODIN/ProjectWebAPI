@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="container text-center">
        <h1>Welcome to Restaurant Management</h1>
        <p>
            Your trusted partner in simplifying restaurant operations. From managing reservations
            to tracking inventory, we’ve got you covered.
        </p>
        <a href="#features" class="btn-primary">Learn More</a>
    </div>
    <div class="features mt-5">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="feature-item">
                    <h3>Streamlined Reservations</h3>
                    <p>Manage customer bookings with ease and avoid overbookings.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <h3>Efficient Staff Management</h3>
                    <p>Organize schedules, tasks, and performance effortlessly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-item">
                    <h3>Comprehensive Reports</h3>
                    <p>Track sales, inventory, and customer trends in real-time.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hero Section Styling */
    .hero-section {
        background: linear-gradient(135deg, #6a1b9a, #8e24aa);
        color: #fff;
        padding: 80px 20px;
        font-family: 'Roboto', sans-serif;
        text-align: center;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .hero-section h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .hero-section p {
            font-size: 1.1rem;
            margin-bottom: 25px;
        }

        .hero-section .btn-primary {
            display: inline-block;
            background-color: #ff7043;
            color: #fff;
            padding: 10px 25px;
            font-size: 1rem;
            font-weight: 500;
            text-decoration: none;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .hero-section .btn-primary:hover {
                background-color: #d84315;
                transform: translateY(-3px);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }

    /* Features Section Styling */
    .features {
        margin-top: 50px;
    }

    .feature-item h3 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .feature-item p {
        font-size: 1rem;
        color: #f0f0f0;
    }

    .row {
        margin-top: 30px;
    }
</style>
